# Screen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 4 && pkill -SIGRTMIN+2 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 4 && pkill -SIGRTMIN+2 i3blocks

