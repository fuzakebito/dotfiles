#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    #status_command i3blocks
    mode invisible

    colors {
        background #27262c
        statusline #abaab9
        separator #42404e

        focused_workspace  #5aaaaf #5aaaaf #27262c
        active_workspace   #7e7b8b #7e7b8b #27262c
        inactive_workspace #35343d #35343d #7e7b8b
        urgent_workspace   #cc5655 #cc5655 #27262c
        binding_mode       #5aaaaf #5aaaaf #27262c
    }
}

# class                 border  backgr. text    indicator child_border
client.focused          #42404e #ffffff #abaab9 #42404e   #42404e
client.focused_inactive #42404e #ffffff #abaab9 #42404e   #42404e
client.unfocused        #42404e #ffffff #abaab9 #42404e   #42404e
client.urgent           #42404e #ffffff #abaab9 #42404e   #42404e
client.placeholder      #000000 #ffffff #abaab9 #000000   #42404e

client.background       #ffffff

set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Materia-dark'
    gsettings set $gnome-schema icon-theme 'breeze-dark'
    gsettings set $gnome-schema font-name 'Jost* 11'
    gsettings set org.gnome.settings-daemon.plugins.xsettings antialiasing 'rgba'
    gsettings set org.gnome.settings-daemon.plugins.xsettings hinting 'none'
}
exec_always waybar

gaps inner 8
gaps top -1
default_border pixel 0
default_floating_border pixel 1
