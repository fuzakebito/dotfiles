colors:
  # Default colors
  primary:
    background: '#202020'
    foreground: '#afaaa3'

  # Normal colors
  normal:
    black:   '#2b2b2b'
    red:     '#ba3e48'
    green:   '#41947d'
    yellow:  '#bc884e'
    blue:    '#6a7cae'
    magenta: '#906d8f'
    cyan:    '#688c96'
    white:   '#C2C2C2'

  # Bright colors
  bright:
    black:   '#414141'
    red:     '#cc4e56'
    green:   '#52a48c'
    yellow:  '#cb965b'
    blue:    '#7a8bbe'
    magenta: '#a07c9f'
    cyan:    '#779ca6'
    white:   '#DEDEDE'

font:
  size: 11
  normal:
    family: HackGen35Nerd Console
  bold:
    family: HackGen35Nerd Console
  italic:
    family: HackGen35Nerd Console
  offset:
    x: 1
    y: -1

cursor:
  style: Underline
  thickness: 0.3

shell:
  program: /usr/bin/tmux
