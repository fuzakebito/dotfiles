colors:
  # Default colors
  primary:
    background: '#262626'
    foreground: '#afafaf'

  # Normal colors
  normal:
    black:   '#1f1f1f'
    red:     '#ff4e72'
    green:   '#00b07d'
    yellow:  '#dc63dd'
    blue:    '#00a2ff'
    magenta: '#698dff'
    cyan:    '#00afd7'
    white:   '#C4C4C4'

  # Bright colors
  bright:
    black:   '#414141'
    red:     '#ff8890'
    green:   '#00ecc4'
    yellow:  '#ff8eff'
    blue:    '#00d4ff'
    magenta: '#c1b9ff'
    cyan:    '#00e7ff'
    white:   '#DEDEDE'

font:
  size: 11
  normal:
    family: HackGen35Nerd Console
  bold:
    family: HackGen35Nerd Console
  italic:
    family: HackGen35Nerd Console
  offset:
    x: 1
    y: -1

cursor:
  style: Underline
  thickness: 0.3

shell:
  program: /usr/bin/tmux
