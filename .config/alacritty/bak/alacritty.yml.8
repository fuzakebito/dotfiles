colors:
  # Default colors
  primary:
    background: '#202020'
    foreground: '#afaaa3'

  # Normal colors
  normal:
    black:   '#2b2b2b'
    red:     '#c43a44'
    green:   '#39927a'
    yellow:  '#c0884a'
    blue:    '#4584b3'
    magenta: '#986e98'
    cyan:    '#688c96'
    white:   '#C2C2C2'

  # Bright colors
  bright:
    black:   '#414141'
    red:     '#d44950'
    green:   '#48a087'
    yellow:  '#cf9557'
    blue:    '#5491c1'
    magenta: '#a67ba5'
    cyan:    '#7599a3'
    white:   '#DEDEDE'

font:
  size: 11
  normal:
    family: HackGen35Nerd Console
  bold:
    family: HackGen35Nerd Console
  italic:
    family: HackGen35Nerd Console
  offset:
    x: 1
    y: -1

cursor:
  style: Underline
  thickness: 0.3

shell:
  program: /usr/bin/tmux
