colors:
  # Default colors
  primary:
    background: '#262626'
    foreground: '#afafaf'

  # Normal colors
  normal:
    black:   '#1f1f1f'
    red:     '#ee6463'
    green:   '#11a291'
    yellow:  '#bd8638'
    blue:    '#798cde'
    magenta: '#d664d4'
    cyan:    '#009fb3'
    white:   '#C4C4C4'

  # Bright colors
  bright:
    black:   '#414141'
    red:     '#ff7f7c'
    green:   '#3fbeac'
    yellow:  '#dba051'
    blue:    '#95a6fb'
    magenta: '#f380f0'
    cyan:    '#3bbacf'
    white:   '#DEDEDE'

font:
  size: 11
  normal:
    family: HackGen35Nerd Console
  bold:
    family: HackGen35Nerd Console
  italic:
    family: HackGen35Nerd Console
  offset:
    x: 1
    y: -1

cursor:
  style: Underline
  thickness: 0.3

shell:
  program: /usr/bin/tmux
