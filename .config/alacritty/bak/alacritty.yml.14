colors:
  # Default colors
  primary:
    background: '#202020'
    foreground: '#afaaa3'

  # Normal colors
  normal:
    black:   '#2b2b2b'
    red:     '#ad4d57'
    green:   '#5d8f69'
    yellow:  '#b3884e'
    blue:    '#60839d'
    magenta: '#8a717c'
    cyan:    '#609091'
    white:   '#C2C2C2'

  # Bright colors
  bright:
    black:   '#414141'
    red:     '#cc4e56'
    green:   '#51a47c'
    yellow:  '#cb965b'
    blue:    '#7092be'
    magenta: '#a575a4'
    cyan:    '#589eab'
    white:   '#DEDEDE'

font:
  size: 11
  normal:
    family: HackGen35Nerd Console
  bold:
    family: HackGen35Nerd Console
  italic:
    family: HackGen35Nerd Console
  offset:
    x: 1
    y: -1

cursor:
  style: Underline
  thickness: 0.3

shell:
  program: /usr/bin/tmux
